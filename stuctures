#include <stdio.h>
#include <stdlib.h>

typedef struct{
	double height;
	double width;
}Rectangle;

void perimeter(Rectangle *rect);
void area(Rectangle *rect);

int main(){
	Rectangle rect;
	printf("Enter height:");
	scanf("%lf", &rect.height);
	printf("\nEnter width:");
	scanf("%lf", &rect.width);

	perimeter(&rect);
	area(&rect);

	return 0;
}

void perimeter(Rectangle *rect){
	double result;
	result = ((rect->height) + (rect->width)) * 2;
	printf("\nThe perimeter is %g", result);
}

void area(Rectangle *rect){
	double result;
	result = (rect->height)*(rect->width);
	printf("\nThe area is %g", result);
}
